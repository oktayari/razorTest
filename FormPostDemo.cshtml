<h1> FormPostDemo </h1>

<form method="post" action="">
<fieldset>
<legend>Kisi Ekle</legend>
    <div>
        <label for="Isim">Isim:</label>
        <input type="text" name="Isim" value="@Request["isim"]" />
    </div>
    <div>
        <label for="Soyad">Soyad:</label>
        <input type="text" name="Soyad" value="@Request["soyad"]" />
    </div>
    <div>
         <label for="Yas">Yas:</label>
         <input type="text" name="Yas" value="@Request["yas"]" />
    </div>
    <div>
    <label>&nbsp;</label>
        <input type="submit" value="Gonder" class="submit" />
    </div>
</fieldset>
</form>

@{
if (IsPost) {
  
    var errors = false;

    var isim = Request["isim"];
    if (isim.IsEmpty()) {
         errors = true;
         @:isim zorunlu alan.<br />
    }

    var soyad = Request["soyad"];
    if (soyad.IsEmpty()) {
        errors = true;
        @:soyad zorunlu alan.<br />
    }

    var yas = 0;
    if (Request["yas"].IsInt()) {
        yas = Request["yas"].AsInt();
    } else {
        errors = true;
        @:yas rakam olmali.<br />
    }

    if (errors == false) {

        <text>
            Kisi Bilgileri: <br />
            Isim: @isim <br />
            Soyad: @soyad <br />
            Yas: @yas <br />
        </text>
        }
    }
}
